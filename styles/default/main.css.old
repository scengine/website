#menu {
    height: 30px;
    background-color: #222;
    border-top: 1px solid #555;
    border-bottom: 1px solid #555;
}
#menu a {
    color: black;
    color: #dfdfdf;
    display: block;
    font-weight: bold;
    margin: 0;
    padding: 5px 10px;
    height: 20px;
}
#menu a:hover {
    text-decoration: none;
}
#menu ul {
    list-style-type: none;
    margin: 0 50px;
    padding: 0;
    
}
#menu li {
    float: left;
    height: 30px;
}
#menu li:hover {
    background-color: #555;
}


#lmenu {
/*     width: 322px; */
    width: 170px;
    float: right;
    margin: 0;
    margin-top: 8px;
    padding-top: 30px;
/*     padding-left: 92px; */
    padding-left: 92px;
    padding-right: 45px;
    
    background: transparent url('lmenu_bg.png') no-repeat;
    min-height: 500px;
}
.lsmenu {
    
    border-bottom: 1px solid #333;
    margin-bottom: 30px;
}
.lsmenu h3 {
    text-align: center;
}


#body {
/*     clear: both; */
    margin: 0px 0px;
    padding: 30px;
    padding-right: 0; 
/*     margin-right: 322px; */
    margin-right: 307px;
    
    background: transparent url('border_top.png') repeat-x;
    
    text-align: justify;
}



#footer {
    clear: both;
    border-top: 1px solid #333;
    text-align: center;
    font-size: 80%;
}